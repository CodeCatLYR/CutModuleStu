<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/framLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_bottom" />


    <LinearLayout
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:background="#e0e0e0"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/relative_tab_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="0">


            <ImageView
                android:id="@+id/icon_0"
                style="@style/imageStyle_tab"
                android:src="@drawable/tab_faceso" />

            <TextView
                style="@style/textStyle_tab"
                android:layout_below="@+id/icon_0"
                android:text="首页" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_tab_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="1">


            <ImageView
                android:id="@+id/icon_1"
                style="@style/imageStyle_tab"
                android:src="@drawable/tab_home" />

            <TextView
                style="@style/textStyle_tab"
                android:layout_below="@+id/icon_1"
                android:text="聊天" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_tab_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="2">


            <ImageView
                android:id="@+id/icon_2"
                style="@style/imageStyle_tab"
                android:src="@drawable/tab_paimeet" />

            <TextView
                style="@style/textStyle_tab"
                android:layout_below="@+id/icon_2"
                android:text="搜索" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_tab_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:tag="3">

            <ImageView
                android:id="@+id/icon_3"
                style="@style/imageStyle_tab"
                android:src="@drawable/tab_me" />

            <TextView
                style="@style/textStyle_tab"
                android:layout_below="@+id/icon_3"
                android:text="我的" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>